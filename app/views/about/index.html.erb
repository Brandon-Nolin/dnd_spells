    <ul style="list-style-type: circle; list-style-position: inside;">
      <li>
        Spells - id (PK), school_id (FK), name, description, level, duration, cast_time, range, material_cost, material, somatic, verbal, created_at, updated_at
      </li>
      <li>
        CharacterClasses - id (PK), name, created_at, updated_at
      </li>
      <li>
        CharacterClassesSpells - spell_id (PK, FK), character_class_id (PK, FK)
      </li>
      <li>
